<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="flat-form">
        <h1>Add a new Flat</h1>
        <div class="mt-3">
          <%= simple_form_for(@flat) do |f| %>
            <%= f.label :name%>
            <%= f.text_field :name%>
            <%= f.label :address %>
            <%= f.text_field :address %>
            <%= f.label :description %>
            <%= f.text_field :description %>
            <%= f.input :price_per_night%>
            <%= f.input :number_of_guests%>
            <%= f.submit %>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
